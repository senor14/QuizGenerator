<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- JAVA와 연결할 Mapper 파일 설정 -->
<mapper namespace="poly.persistance.mapper.IQuizMapper">
	<insert id="insertQuiz" parameterType="QuizDTO">
		INSERT INTO q_info
		(
			FK_USER_NO,
			Q_ID,
			Q_PIC,
			<!-- Q_CATEGORY,  -->
			REG_ID,
			CHG_ID,
			REG_DT,
			CHG_DT
		)
		VALUES
		(
			#{fk_user_no},
			(SELECT IFNULL(MAX(q.Q_ID),0)+1 FROM q_info AS q WHERE q.FK_USER_NO = #{fk_user_no}),
			#{q_pic},
			<!--#{q_category},-->
			#{id},
			#{id},
			SYSDATE(),
			SYSDATE()
		)
	</insert>
	<select id="getQuizList" resultType="QuizDTO">
		SELECT 
			*
		FROM
			q_info
		WHERE
			Q_ID = #{q_id} AND FK_USER_NO = #{fk_user_no}
	</select>
	<select id="getExamList" parameterType="QuizDTO" resultType="QuizDTO">
		SELECT 
			*
		FROM
			q_info
		WHERE
		<foreach collection="list" item="q_id_list" separator=",">
			Q_ID = #{q_id_list.q_id} AND FK_USER_NO = #{q_id_list.fk_user_no}
		</foreach>
	</select>
</mapper>